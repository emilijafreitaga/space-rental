<div class="container">
  <div class="cards">
      <% @spaces.each do |space| %>
        <div class="card" style="width: 18rem;">
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= cl_image_tag space.photos[0].key, height: 300, width: 400, crop: :fill  %>
              </div>
              <div class="carousel-item active">
                <%= cl_image_tag space.photos[1].key, height: 300, width: 400, crop: :fill  %>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to space.place_name, space_path(space) %></h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><p>Category: <%= space.category %></p></li>
            <li class="list-group-item"><p>Maximum capacity: <%= space.max_capacity %></p></li>
            <li class="list-group-item"><p>Price per booking: <%= space.price_per_booking %></p></li>
          </ul>
        </div>
      <% end %>
  </div>
</div>





